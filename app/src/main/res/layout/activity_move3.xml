<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".move3"
    android:background="@drawable/gradient1">

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/startimg3"
        android:layout_width="115dp"
        android:layout_height="111dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:padding="5dp"
        android:src="@drawable/temp"
        app:shapeAppearanceOverlay="@style/circle">

    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature converto"
        android:layout_below="@+id/startimg3"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginStart="60dp"/>

    <EditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="10"
        android:layout_below="@+id/text3"
        android:inputType="number"
        android:text="0000"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:background="@drawable/border"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="right"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/result1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/input1"
        android:text="0000"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:background="@drawable/border"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_below="@+id/result1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/lblue"
        />

    <LinearLayout
        android:id="@+id/teoptions1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/clear">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ctf"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="C -> F"
            android:textSize="30dp"
            android:layout_marginStart="40dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textStyle="italic"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ftc"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="F -> C"
            android:textSize="30dp"
            android:layout_marginStart="60dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/teoptions2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teoptions1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ktc"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="k -> C"
            android:textSize="30dp"
            android:layout_marginStart="40dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textStyle="italic"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ctk"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="C -> k"
            android:textSize="30dp"
            android:layout_marginStart="60dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/teoptions3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teoptions2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ktf"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="K -> F"
            android:textSize="30dp"
            android:layout_marginStart="40dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textStyle="italic"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ftk"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="F -> K"
            android:textSize="30dp"
            android:layout_marginStart="60dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textStyle="italic"/>

    </LinearLayout>

</RelativeLayout>